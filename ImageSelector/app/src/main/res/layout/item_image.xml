<?xml version="1.0" encoding="utf-8"?>
<com.example.yangchao.imageselect.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/siv_camera"
        android:src="@mipmap/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.example.yangchao.imageselect.view.SquareFrameLayout
        android:id="@+id/sf_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.yangchao.imageselect.view.SquareImageView
            android:id="@+id/siv_photo"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
        <ImageView
            android:id="@+id/iv_right"
            android:layout_alignParentRight="true"
            android:src="@drawable/select_image_bg"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.example.yangchao.imageselect.view.SquareFrameLayout>

</com.example.yangchao.imageselect.view.SquareFrameLayout>
